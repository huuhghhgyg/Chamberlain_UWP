<Page
    x:Class="Chamberlain_UWP.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chamberlain_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" xmlns:local1="using:Chamberlain_UWP.Reminder"
    Background="{ThemeResource NavigationViewExpandedPaneBackground}">

    <Page.Resources>
        <!--ReminderItem列表的模板-->
        <Style TargetType="ListViewItem" x:Key="SectionView">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!--列表卡片的DataTemplate，存放所有项目-->
        <DataTemplate x:DataType="local1:ReminderItem" x:Key="ReminderItemViewTemplate">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,8" Padding="12,8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}">

                <RelativePanel Margin="0,0,0,4" >
                    <CheckBox Name="ItemCheckBox"
                              Content="{x:Bind Title,Mode=OneWay}"
                              IsChecked="{x:Bind IsReminderDone,Mode=TwoWay}"
                              Click="ItemCheckBox_Click"/>
                    <TextBlock Text="{x:Bind ProgressString,Mode=OneWay}" 
                               Name="ProgressTextBlock"
                               RelativePanel.AlignRightWithPanel="True" 
                               RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <TextBlock Text="{x:Bind PriorityString}"
                               RelativePanel.LeftOf="ProgressTextBlock"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                </RelativePanel>
                <muxc:ProgressBar x:Name="progressBar" Value="{x:Bind ProgressValue,Mode=OneWay}" Maximum="1" Margin="0,0,0,4"/>
                <RelativePanel Margin="0,4">
                    <TextBlock Name="ItemDescriptionTextBlock"
                               Text="{x:Bind Description,Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind TagsString,Mode=OneWay}" 
                               Margin="8,0,0,0"
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               RelativePanel.RightOf="ItemDescriptionTextBlock"/>
                    <TextBlock Text="ddl:"
                               RelativePanel.LeftOf="DateTimeTextBlock"
                               Margin="0,0,4,0"
                               Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBlock x:Name="DateTimeTextBlock"
                               Text="{x:Bind DeadlineString,Mode=OneWay}"
                               RelativePanel.AlignRightWithPanel="True"
                               Style="{StaticResource CaptionTextBlockStyle}"/>
                </RelativePanel>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="PageTitleTextBlock" Text="任务面板"
                   Margin="48,48,48,12"
                   Style="{ThemeResource TitleTextBlockStyle}"/>

        <ScrollViewer Grid.Row="1">
            <!--面板-->
            <StackPanel Margin="48,0,48,48">
                <ListView ItemsSource="{x:Bind ReminderListOnwork, Mode=OneWay}" 
                        SelectionMode="None"
                        ItemContainerStyle="{StaticResource SectionView}"
                        ItemTemplate="{StaticResource ReminderItemViewTemplate}">
                </ListView>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
