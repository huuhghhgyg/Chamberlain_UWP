<Page
    x:Class="Chamberlain_UWP.Reminder.ReminderItemsManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chamberlain_UWP.Reminder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource NavigationViewExpandedPaneBackground}">

    <Page.Resources>
        <!--ReminderItem列表的模板-->
        <Style TargetType="ListViewItem" x:Key="SectionView">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!--列表卡片的DataTemplate，存放所有项目-->
        <DataTemplate x:DataType="local:ReminderItem" x:Key="ReminderItemViewTemplate">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,8" Padding="0,8">
                <RelativePanel Margin="0,0,0,4" >
                    <CheckBox Name="ItemCheckBox"
                              Content="{x:Bind Title,Mode=OneWay}"
                              IsChecked="{x:Bind IsReminderDone,Mode=TwoWay}"/>
                    <TextBlock Text="{x:Bind ProgressString,Mode=OneWay}" 
                               Name="ProgressTextBlock"
                               RelativePanel.AlignRightWithPanel="True" 
                               RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <TextBlock Text="{x:Bind PriorityString,Mode=OneWay}"
                               RelativePanel.LeftOf="ProgressTextBlock"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                </RelativePanel>
                <muxc:ProgressBar x:Name="progressBar" Value="{x:Bind ProgressValue,Mode=OneWay}" Maximum="1" Margin="0,0,0,4"/>
                <RelativePanel Margin="0,4">
                    <TextBlock Text="{x:Bind Description,Mode=OneWay}" 
                               Name="ItemDescriptionTextBlock"
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind TagsString,Mode=OneWay}" 
                               Margin="8,0,0,0"
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               RelativePanel.RightOf="ItemDescriptionTextBlock"/>
                    <TextBlock x:Name="DateTimeTextBlock"
                               Text="{x:Bind DeadlineString,Mode=OneWay}"
                               RelativePanel.AlignRightWithPanel="True"
                               Style="{ThemeResource BodyTextBlockStyle}"/>
                    <TextBlock Text="ddl: "
                               RelativePanel.LeftOf="DateTimeTextBlock"
                               Margin="0,0,4,0"
                               Style="{ThemeResource BodyTextBlockStyle}"/>

                </RelativePanel>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="PageTitleTextBlock"
                   Text="管理提醒项"
                   Margin="48,48,48,12"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <Grid Grid.Row="1">
            <ScrollViewer Name="PageScrollViewer">
                <StackPanel Margin="48,0,48,48">
                    <TextBlock Text="添加" Margin="0,0,0,8" Style="{ThemeResource BaseTextBlockStyle}" />
                    <!--添加项目-->
                    <StackPanel Name="AddItemPanel" Style="{StaticResource CardStackPanel}" Padding="12">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <!--提醒项信息-->
                                <TextBlock Text="添加提醒" 
                                           Margin="0,0,0,8" 
                                           Style="{ThemeResource BaseTextBlockStyle}" />
                                <StackPanel Padding="0,12">
                                    <TextBox Header="标题" Name="AddTitleTextBox"/>
                                    <TextBox Header="提醒描述" Name="AddDescTextBox" Margin="0,12,0,0"/>
                                    <CalendarDatePicker PlaceholderText="到期日期"
                                                        Header="选择日期"
                                                        Name="AddItemDatePicker"
                                                        Margin="0,12,0,0"/>
                                    <TimePicker Header="到期时间"
                                                Name="AddItemTimePicker"
                                                Margin="0,12,0,0"/>
                                    <!--标签-->
                                    <StackPanel>
                                        <TextBlock Text="选择标签" Margin="0,12,0,4"/>
                                        <TextBlock Name="SelectedTagsTextBlock" Grid.Column="1" Text="（未选择）"/>
                                    </StackPanel>

                                    <ComboBox Header="优先级" Name="AddItemPriorityComboBox" Margin="0,12,0,0" SelectedIndex="0">
                                        <x:String>默认</x:String>
                                        <x:String>中</x:String>
                                        <x:String>高</x:String>
                                    </ComboBox>

                                    <!--按钮-->
                                    <RelativePanel Margin="0,16,0,0">
                                        <Button Name="AddItemButton" Content="添加项"
                                                RelativePanel.AlignRightWithPanel="True"
                                                Style="{StaticResource AccentButtonStyle}"
                                                Click="AddItemButton_Click"/>
                                    </RelativePanel>

                                    <muxc:TeachingTip x:Name="AddInstructTip">
                                        <muxc:TeachingTip.IconSource>
                                            <muxc:SymbolIconSource Symbol="Important" />
                                        </muxc:TeachingTip.IconSource>
                                    </muxc:TeachingTip>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <!--标签信息-->
                                <TextBlock Text="标签" 
                                           Margin="0,0,0,8" 
                                           Style="{ThemeResource BaseTextBlockStyle}" />
                                <!--存放所有标签-->
                                <ListBox Name="TagListBox"
                                         SelectionMode="Multiple" 
                                         MaxHeight="334" 
                                         ItemsSource="{x:Bind TagList,Mode=OneWay}"
                                         SelectionChanged="TagListBox_SelectionChanged"/>
                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox PlaceholderText="标签名" x:Name="AddTagTextBox" />
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Name="AddTagButton" Content="添加"
                                                Margin="4,0,0,0" 
                                                Style="{StaticResource AccentButtonStyle}"
                                                Click="AddTagButton_Click"/>
                                    </StackPanel>
                                </Grid>

                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <TextBlock Text="修改提醒" Margin="0,12,0,8" Style="{ThemeResource BaseTextBlockStyle}" />
                    <!--处理项目面板-->
                    <StackPanel Name="PendingItemsPanel">
                        <StackPanel Style="{StaticResource CardStackPanel}" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <RelativePanel>
                                        <AutoSuggestBox Name="ItemSuggestBox" 
                                                        PlaceholderText="搜索“提醒”"
                                                        QueryIcon="Find"
                                                        Width="280"
                                                        TextChanged="ItemSuggestBox_TextChanged"
                                                        SuggestionChosen="ItemSuggestBox_SuggestionChosen"/>
                                        <Button Name="SortListButton" RelativePanel.AlignRightWithPanel="True" Click="SortListButton_Click">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE72C;" />
                                        </Button>
                                    </RelativePanel>
                                    <ListView Name="RemindItemListView" Margin="0,8,0,0" ItemsSource="{x:Bind ReminderList,Mode=OneWay}"
                                              SelectionChanged="RemindItemListView_SelectionChanged"
                                              ItemTemplate="{StaticResource ReminderItemViewTemplate}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <!--修改面板-->
                                    <TextBox Name="ItemReviseTitleText" 
                                             Header="标题"/>
                                    <TextBox Name="ItemReviseDescText" 
                                             Header="提醒描述" 
                                             Margin="0,12,0,0"/>
                                    <CalendarDatePicker Name="ItemReviseDatePicker" 
                                                        PlaceholderText="Deadline日期" 
                                                        Header="选择日期" 
                                                        Margin="0,12,0,0"/>
                                    <TimePicker Name="ItemReviseTimePicker" Header="Deadline时间" Margin="0,12,0,0"/>
                                    <ComboBox Header="优先级" Name="ItemRevisePriorityComboBox" Margin="0,12,0,0">
                                        <x:String>默认</x:String>
                                        <x:String>中</x:String>
                                        <x:String>高</x:String>
                                    </ComboBox>
                                    <RelativePanel Margin="0,16,0,0">
                                        <Button Name="ModifyItemButton" Content="修改提醒项" 
                                                RelativePanel.AlignRightWithPanel="True" 
                                                Style="{StaticResource AccentButtonStyle}" 
                                                Click="ModifyItemButton_Click"/>
                                        <Button Name="DeleteItemButton" Content="删除" 
                                                Margin="0,0,8,0" 
                                                RelativePanel.LeftOf="ModifyItemButton"
                                                Click="DeleteItemButton_Click"/>
                                    </RelativePanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
