<Page
    x:Class="Chamberlain_UWP.Reminder.ReminderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chamberlain_UWP.Reminder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource NavigationViewExpandedPaneBackground}">

    <Page.Resources>
        <!--ReminderItem列表的模板-->
        <Style TargetType="ListViewItem" x:Key="SectionView">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!--列表卡片的DataTemplate，存放所有项目-->
        <DataTemplate x:DataType="local:ReminderItem" x:Key="ReminderItemViewTemplate">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,8" Padding="12,8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}">

                <RelativePanel Margin="0,0,0,4" >
                    <CheckBox Name="ItemCheckBox"
                              Content="{x:Bind Title,Mode=OneWay}"
                              IsChecked="{x:Bind IsReminderDone,Mode=TwoWay}"
                              Click="ItemCheckBox_Click"/>
                    <TextBlock Text="{x:Bind ProgressString,Mode=OneWay}" 
                               Name="ProgressTextBlock"
                               RelativePanel.AlignRightWithPanel="True" 
                               RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <TextBlock Text="{x:Bind PriorityString}"
                               RelativePanel.LeftOf="ProgressTextBlock"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                </RelativePanel>
                <muxc:ProgressBar x:Name="progressBar" Value="{x:Bind ProgressValue,Mode=OneWay}" Maximum="1" Margin="0,0,0,4"/>
                <RelativePanel Margin="0,4">
                    <TextBlock Name="ItemDescriptionTextBlock"
                               Text="{x:Bind Description,Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind TagsString,Mode=OneWay}" 
                               Margin="8,0,0,0"
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               RelativePanel.RightOf="ItemDescriptionTextBlock"/>
                    <TextBlock Text="ddl:"
                               RelativePanel.LeftOf="DateTimeTextBlock"
                               Margin="0,0,4,0"
                               Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBlock x:Name="DateTimeTextBlock"
                               Text="{x:Bind DeadlineString,Mode=OneWay}"
                               RelativePanel.AlignRightWithPanel="True"
                               Style="{StaticResource CaptionTextBlockStyle}"/>
                </RelativePanel>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="PageTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" Margin="48,48,48,12">提醒</TextBlock>

        <!--面板-->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="48,0,48,48">
                <RelativePanel HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                        Padding="16" Style="{StaticResource CardRelativePanel}">
                    <FontIcon x:Name="ItemFontIcon" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xE133;" FontSize="26"
                                  RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    <StackPanel Margin="16,0,0,0"
                                    RelativePanel.RightOf="ItemFontIcon"
                                    RelativePanel.AlignVerticalCenterWithPanel="True">
                        <TextBlock Text="管理提醒" 
                                       Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBlock Text="添加 / 删除提醒项" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    </StackPanel>

                    <Button Name="ManageRemindItemButton" Content="转到管理页面" 
                            RelativePanel.AlignRightWithPanel="True" 
                            Style="{StaticResource AccentButtonStyle}"
                            Click="ManageRemindItemButton_Click"/>
                </RelativePanel>

                <TextBlock Text="搜索" Margin="0,12,0,8" Style="{ThemeResource BaseTextBlockStyle}"/>

                <StackPanel Orientation="Horizontal">
                    <AutoSuggestBox PlaceholderText="搜索未完成的任务"
                                        QueryIcon="Find"
                                        Name="OnworkItemSuggestBox"
                                        Width="280"
                                        TextChanged="OnworkItemSuggestBox_TextChanged"/>
                    <TextBlock Text="搜索排序："
                            VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <ComboBox Name="ItemsSortComboBox" SelectedIndex="0" SelectionChanged="ItemsSortComboBox_SelectionChanged">
                        <ComboBoxItem Content="按照标签"/>
                        <ComboBoxItem Content="按照名称"/>
                    </ComboBox>
                </StackPanel>
                <TextBlock Text="待处理" Margin="0,12,0,8" Style="{ThemeResource BaseTextBlockStyle}"/>
                <ListView ItemsSource="{x:Bind ReminderListOnwork,Mode=OneWay}" 
                        SelectionMode="None"
                        ItemContainerStyle="{StaticResource SectionView}"
                        ItemTemplate="{StaticResource ReminderItemViewTemplate}">
                </ListView>
                <TextBlock Text="已完成" Margin="0,12,0,8" Style="{ThemeResource BaseTextBlockStyle}"/>
                <ListView ItemsSource="{x:Bind ReminderListFinished}"
                        SelectionMode="None"
                        ItemContainerStyle="{StaticResource SectionView}"
                        ItemTemplate="{StaticResource ReminderItemViewTemplate}">
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
